/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.innerbox {
  background: #777;
  position: fixed;
  bottom: 0;
  transform: translateY(100%);
  width: 100%;
}
.innerbox text {
  display: block;
  margin: 30rpx 0;
  text-align: center;
  color: #fff;
}
.innerbox button {
  width: 40%;
  margin: 30rpx auto;
}