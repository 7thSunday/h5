.list {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}
.item {
  width: 50%;
  position: relative;
  font-size: 0;
  line-height: 0;
  padding: 0;
}
.item image {
  width: 100%;
  height: 350rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
}
.item .like {
  display: block;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 50rpx;
}